<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="custom-form-container">
    <div class="form-group mb-3">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter your blog title" name="title" value="<%= article.title %>" required>
    </div>

    <div class="form-group mb-3">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control" required placeholder="Enter description"><%= article.description %></textarea>
    </div>

    <div class="form-group mb-3">
        <label for="markdown">Markdown</label>
        <textarea name="markdown" id="markdown" class="form-control" required placeholder="Main Content"><%= article.markdown %></textarea>
    </div>

    <div class="d-flex justify-content-between">
        <a href="/" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary" name="submit">Save</button>
    </div>
</div>
