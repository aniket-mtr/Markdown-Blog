<!-- article variable is passed from server.js and also from a wrongly/newly created article from article.js  -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="form-group mb-3 ml-1">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter you blog title" name="title" value="<%= article.title %>" required style="width: 50vw;">
</div>

<div class="form-group mb-3 ml-1">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" style="width: 50vw;
            height: 15vh;" placeholder="enter description">
        <%= article.description %>
    </textarea>
</div>

<div class="form-group mb-3 ml-1">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required style="width: 50vw;
            height: 25vh;" placeholder="Main Content">
        <%= article.markdown %>
    </textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary" name="submit">Save</button>