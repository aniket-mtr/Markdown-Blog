<!-- article variable is passed from server.js -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body{
            background-color: #e7dff9;
            font-family: Arial, sans-serif;
        }
        .card{
            width: 50vw;
            width: 100%;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .container-fluid {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
        }
        .card-text {
            margin-bottom: 1em;
        }
        .btn-container {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }
        .card-title {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% article.forEach(article => { %>
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2"><%= article.createDate.toLocaleDateString() %></div>
                </div>
                <div class="card-body">
                    <div class="card-text mb-2">
                        <%= article.description %>
                    </div>
                    <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    <!-- to implement delete method do not use anchor tag bc it is tested by the search engine and you might lose all data -->
                     <!-- <form action="/articles/?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                     </form> -->
                     <form action="/articles/delete/<%= article.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                     </form>
                </div>
            </div>
        <% }) %>
        
    </div>
</body>
</html>